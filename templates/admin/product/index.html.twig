{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between">
            {# <p>{{ products|length }}</p> #}
            <h1>{{ "Produtos!"|upper }}</h1>

            <a href="/admin/products/create" class="btn btn-success">Criar Produto</a>
        </div>
    </div>
