                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                {# <tr>
                    <td>{{ product.getId() }}</td>
                    <td>{{ product.getName() }}</td>
                    <td>{{ product.getcreatedAt()|date('d/m/Y H:i:s') }}</td>
                </tr> #}
